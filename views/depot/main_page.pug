extends ../layout/base_monitoring 
block content         
        section.content-header
          h1
            | Dashboard
            small Monitoring Tangki
          ol.breadcrumb
            li
              a(href='#')
                i.fa.fa-dashboard
                |  Home
            li.active Dashboard
        // Main content
        section.content
          // Small boxes (Stat box)
          .row
            .col-lg-3.col-xs-6
              .info-box
                span.info-box-icon.bg-purple
                  i.fa.fa-money
                .info-box-content
                  span.info-box-text Cost
                  span.info-box-number
                    small Rp
                    |  90000
                // /.info-box-content
              // /.info-box
            // /.col
            .col-md-3.col-sm-6.col-xs-12
              .info-box
                span.info-box-icon.bg-green
                  i.fa.fa-list-alt
                .info-box-content
                  span.info-box-text Jumlah Transaksi
                  span.info-box-number 41,410
            .col-lg-3.col-xs-6
              .info-box
                span.info-box-icon.bg-yellow
                  i.fa.fa-sun-o
                .info-box-content
                  span.info-box-text Status Lampu
                  span.info-box-number ON

            .row
            .col-xs-12
              .box
                .box-header
                  h3.box-title Data Pengisian Air
                // /.box-header
                .box-body
                  table#example1.table.table-bordered.table-striped
                    thead
                      tr
                        th ID
                        th Date
                        th Time
                        th Harga
                        th Berat
                    for row in data 
                        tr
                          td #{row.id_pengisian}
                          td #{row.date_pengisian}
                          td #{row.time}
                          td #{row.harga}
                          td span.label.label-danger Delivered 
                  a(href='/depot/Pengisian')
                    p Lihat selengkapnya

            .row
            .col-xs-12
              .box
                .box-header
                  h3.box-title Data Pengisian Air
                // /.box-header
                .box-body
                  table#example1.table.table-bordered.table-striped
                    thead
                      tr
                        th ID
                        th Date
                        th Time
                        th Harga
                        th Berat
                    for row in data 
                        tr
                          td #{row.id_pengisian}
                          td #{row.date_pengisian}
                          td #{row.time}
                          td #{row.harga}
                          td span.label.label-danger Delivered 
                  a(href='/depot/Pengisian')
                    p Lihat selengkapnya                    

                                                                         