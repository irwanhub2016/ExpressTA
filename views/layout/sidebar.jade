aside.main-sidebar
	section.sidebar
		.user-panel
			.pull-left.image
				img(src='/adminlte/dist/img/user2-160x160.jpg',alt='User Image').img-circle
			.pull-left.info
				p #{showAdmin[0].username}
				a(href='#')
					i.fa.fa-circle.text-success 
					| Online
		form(action='#',method='get').sidebar-form
			.input-group
				input(type='text', name='q',placeholder='Search...').form-control
				span.input-group-btn
						button(type='submit', name='search')#search-btn.btn.btn-flat
							i.fa-fa-search
		ul.sidebar-menu
			li.header
				| Main Navigation
			li.treeview
				a(href='#')
					i.fa.fa-dashboard
					span
						| Dashboard
					span.pull-right-container
						i.fa.fa-angle-left.pull-right
				ul.treeview-menu
					li
						a(href='http://localhost:1234/depot/pengisian')
							i.fa.fa-circle-o
							| Pengisian Air Galon
					li
						a(href='http://localhost:1234/depot/tangki_air')
							i.fa.fa-circle-o
							| Monitoring Tangki
					li
						a(href='http://localhost:1234/depot/inbox')
							i.fa.fa-circle-o
							| Inbox						
			li.treeview
				a(href='#')
					i.fa.fa-files-o
					span
						| Dokumentasi
				ul.treeview-menu
					li
						a(href='#')
							i.fa.fa-circle-o
							| Download Transaksi PDF